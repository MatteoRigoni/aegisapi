{
  "dashboard": {
    "title": "Gateway Observability",
    "schemaVersion": 39,
    "version": 1,
    "panels": [
      {
        "title": "HTTP Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_request_duration_seconds_count[5m]))",
            "legendFormat": "requests"
          }
        ]
      },
      {
        "title": "Request Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_server_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95"
          }
        ]
      },
      {
        "title": "Error Responses",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_server_request_duration_seconds_count{http_status_code=~\"4..\"}[5m]))",
            "legendFormat": "4xx"
          },
          {
            "expr": "sum(rate(http_server_request_duration_seconds_count{http_status_code=~\"5..\"}[5m]))",
            "legendFormat": "5xx"
          }
        ]
      },
      {
        "title": "Gateway Blocks",
        "type": "graph",
        "targets": [
          { "expr": "sum(rate(gateway_rate_limit_hits[5m]))", "legendFormat": "rate limit" },
          { "expr": "sum(rate(gateway_waf_blocks[5m]))", "legendFormat": "WAF" },
          { "expr": "sum(rate(gateway_schema_validation_errors[5m]))", "legendFormat": "schema" }
        ]
      }
    ]
  }
}
